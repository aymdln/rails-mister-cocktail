<%= render 'shared/banner', cocktail: @cocktail %>
<div class="container my-3">
	<ul class="list-group">
		<% @doses.each do |d| %>
			<li class="list-group-item my-1">
				<h4><%= d.ingredient.name %></h4>
				<p><strong><%= d.description %></strong></p>
			</li>
		<% end %>
	</ul>
	<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-2' %>
</div>
<div class="container">
  <%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } ,
      class: "btn btn-danger" %>
</div>
</div>
