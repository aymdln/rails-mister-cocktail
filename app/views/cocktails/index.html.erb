<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://www.remymartin.com/wp-content/uploads/2016/07/20_Fleurissimo-3-1024x524.jpg');">
	<div class="container">
		<h1>Cocktails</h1>
    <%= link_to 'Add Cocktail', new_cocktail_path, class: "btn btn-primary" %>
	</div>
</div>

<div class="container">
	<div class="cards my-3">
		<% @cocktails.each do |c| %>
			<%= link_to cocktail_path(c) do %>
				<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path c.photo%>')">
					<%= c.name %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
