<%= render 'shared/banner', cocktail: @cocktail %>
<div class="container">
	<div class="container">
		<h1>
			New Dose
		</h1>
		<%= simple_form_for [@cocktail, @dose] do |f| %>
			<%= f.input :description %>
			<%= f.association :ingredient %>
			<%= f.submit "add a cocktail", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
