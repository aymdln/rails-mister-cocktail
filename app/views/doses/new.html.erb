<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo%>');">
<div class="container">
	<h1><%= @cocktail.name %></h1>
</div>
</div>
<div class="container">
	<div class="container">
		<h1>
			New Dose
		</h1>
		<%= simple_form_for [@cocktail, @dose] do |f| %>
			<%= f.input :description %>
			<%= f.association :ingredient %>
			<%= f.submit "add a cocktail", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
